{
  "name": "stump",
  "version": "1.0.0",
  "repository": "https://github.com/aaronleopold/stump.git",
  "author": "Aaron Leopold <aaronleopold1221@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cd server && cargo run --release",
    "dev": "concurrently -n server,frontend -c green.bold,blue.bold \"pnpm server:dev\" \"pnpm frontend:dev\"",
    "build:docker": "pnpm frontend:build && pnpm server:build:docker",
    "server:start": "cd server && cargo run",
    "server:dev": "cd server && cargo watch -x run",
    "server:build": "cd server && cargo build --release",
    "server:build:docker-debian": "echo 'FIXME: I AM BROKEN --> run the following in /server: docker build -f Dockerfile.debian -t stump-deb .'",
    "server:build:docker-alpine": "cd server && docker build -f Dockerfile.alpine -t stump .",
    "server:check": "cd server && cargo check",
    "server:fmt": "cargo fmt --all --manifest-path=server/Cargo.toml",
    "frontend:install": "cd frontend && pnpm install",
    "frontend:start": "cd frontend && pnpm run start",
    "frontend:dev": "cd frontend && pnpm dev",
    "frontend:build": "cd frontend && pnpm run build && mv build ../server/static",
    "frontend:build:docker": "",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "eslint": "^8.7.0",
    "husky": "^7.0.2",
    "lint-staged": "^12.3.2",
    "prettier": "^2.5.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
