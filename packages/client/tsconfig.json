{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"jsx": "preserve",
		"skipLibCheck": true,
		"paths": {
			"@stump/sdk": ["../sdk/src/index.ts"],
			"@stump/sdk/*": ["../sdk/src/*"],
			"@stump/types": ["../types/index.ts"],
			"@stump/types/*": ["../types/*"],
			"@/*": ["./src/*"]
		},
		"module": "NodeNext"
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../sdk"
		},
		{
			"path": "../types"
		}
	]
}
