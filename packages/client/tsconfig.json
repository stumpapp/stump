{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"jsx": "preserve",
		"skipLibCheck": true,
		"paths": {
			"@stump/api": ["../api/src/index.ts"],
			"@stump/api/*": ["../api/src/*"],
			"@stump/types": ["../types/index.ts"],
			"@stump/types/*": ["../types/*"]
		},
		"module": "NodeNext"
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../api"
		},
		{
			"path": "../types"
		}
	]
}
