{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "ES2022",
		"moduleResolution": "Node",
		"composite": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"paths": {
			"@stump/sdk": ["../sdk/src/index.ts"],
			"@stump/sdk/*": ["../sdk/src/*"],
			"@stump/graphql": ["../graphql/src/index.ts"],
			"@/*": ["./src/*"]
		},
		"plugins": [
			{
				"name": "@0no-co/graphqlsp",
				"schema": "../../crates/graphql/schema.graphql"
			}
		]
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"references": [
		{
			"path": "../sdk"
		},
		{
			"path": "../graphql"
		}
	]
}
