{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"strict": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "nodenext",
		"verbatimModuleSyntax": false,
		"target": "es2022",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"incremental": true,
		"noEmit": false,
		"noEmitOnError": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"paths": {
			"@stump/client": ["./packages/client"],
			"@stump/api": ["./packages/api"],
			"@stump/types": ["./packages/types"],
			"@stump/browser": ["./packages/browser"]
		}
	}
}
